/* pages/detail/detail.wxss */
.header {
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 24px;
  color: #333;
}

.header .sub-title {
  font-size: 16px;
}

.table .row {
  position: relative;
  background-color: #f44;
  overflow: hidden;
}

.table .row-yi {
  background-color: #fe4;
}

.table .row .left {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  font-size: 48px;
  color: #fff;
}

.table .row-yi .left {
  color: #333;
}

.table .row .right {
  margin-left: 25%;
  padding: 20px 15px;
  display: flex;
  align-items: center;
  min-height: 80px;
  line-height: 1.432;
  box-sizing: border-box;
  background-color: #ffddd3;
}

.table .row-yi .right {
  background-color: #ffa;
}

.footer {
position: absolute;
right: 0;
bottom: 0;
left: 0;
height: 50px;
}

.footer .c-day {
float: left;
width: 50%;
height: 50px;
line-height: 50px;
text-align: center;
color: #fff;
font-size: 16px;
background-color: #277CFB;
border-radius: 0;
box-sizing: border-box;
}

.footer .c-hover {
background-color: #277CFB;
}


.footer .c-day.c-prev {
border-right: 1px solid #fff;
}

.footer .c-day.c-next {
border-left: 1px solid #fff;
}