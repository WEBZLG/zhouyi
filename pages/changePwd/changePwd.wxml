<!--pages/changePwd/changePwd.wxml-->
<view>
	<van-cell-group>
		<van-field value="{{ oldPwd }}" label="原始密码" bindinput='getOldValue' placeholder="请输入原始密码"/>
		<van-field value="{{ newPwd }}" type="password" label="新密码" bindinput='getNewValue' placeholder="请输入新密码" />
		<van-field value="{{ newPwdAgain }}" type="password" label="新密码" bindinput='getNewValueAgain' placeholder="请再次输入新密码" />
	</van-cell-group>
	<view class="btn-box">
		<van-button type="info" round catchtap="onChange">修改密码</van-button>
	</view>
</view>
