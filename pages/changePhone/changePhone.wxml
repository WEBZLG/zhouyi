<!--pages/changePhone/changePhone.wxml-->
<view>
	<view wx:if="{{isCheck==false}}">
		<van-cell-group>
			<van-field value="{{ phone }}" label="原手机号" disabled/>
			<van-field value="{{ code }}" center clearable label="验证码" bindinput='getCodeValue' placeholder="请输入验证码" use-button-slot>
				<van-button slot="button" size="small" type="info" round bindtap='getCode' disabled='{{disabled}}'>{{codename}}</van-button>
			</van-field>
		</van-cell-group>
		<view class="btn-box">
			<van-button type="info" round catchtap="onRegist">验证</van-button>
		</view>
	</view>
	<view wx:if="{{isCheck==true}}">
		<van-cell-group>
			<van-field value="{{ newPhone }}" label="新手机号" />
			<van-field value="{{ newCode }}" center clearable label="验证码" bindinput='getCodeValue' placeholder="请输入验证码" use-button-slot>
				<van-button slot="button" size="small" type="info" round bindtap='getCode' disabled='{{disabled}}'>{{codename}}</van-button>
			</van-field>
		</van-cell-group>
		<view class="btn-box">
			<van-button type="info" round catchtap="onRegist">修改</van-button>
		</view>
	</view>
</view>