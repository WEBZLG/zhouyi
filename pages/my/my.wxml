<!--pages/my/my.wxml-->
<view>
	<view class="user-bg">
		<image src="../../images/my_bg.png"></image>
		<view class="user-box">
			<van-uploader bind:after-read="afterRead" wx:if="{{userInfo}}">
				<van-image  width="100" height="100" round fit="cover" show-loading src="{{imgUrl+userInfo.head_img}}" />
			</van-uploader>
			<van-image wx:else width="100" height="100" round fit="cover" show-loading src="https://img.yzcdn.cn/vant/cat.jpeg" />
			<view wx:if="{{userInfo}}">{{userInfo.nickname||userInfo.mobile}}</view>
			<view wx:else catchtap="onLogin">登录</view>
		</view>
	</view>
	<view class="nav-box">
		<van-cell-group>
			<van-cell title="实名认证" value="姓名" data-type="0" catchtap="getMessge"/>
			<van-cell title="修改手机" is-link  data-type="1" catchtap="getMessge"/>
			<van-cell title="修改密码" is-link  data-type="2" catchtap="getMessge"/>
			<van-cell title="我的推荐" is-link  data-type="3" catchtap="getMessge"/>
			<van-cell title="成为大师/大师资料" is-link  data-type="4" catchtap="getMessge"/>
		</van-cell-group>
	</view>
	<view class="btn-box" wx:if="{{userInfo}}">
		<van-button type="info" round plain catchtap="onSignOut">退出登录</van-button>
	</view>
</view>