.user-bg{
  height: 400rpx;
  width: 100%;
}
.user-box{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  color: #ffffff;
  text-align: center;
}
.van-image--round{
  margin: 0 auto;
  padding: 30rpx;
}
.nav-box{
  margin: 30rpx;
  background-color: #ffffff;
  border-radius: 10rpx; 
  overflow: hidden;
}
.btn-box{
  margin: 30rpx;
}
.van-button--info {
  width: 100%;
}
.open-vip{
  color: #ffffff;
  background-color: #FEA001;
  border-radius: 30rpx;
  padding: 2px 15rpx;
  margin-top: 20rpx;
  line-height: 30rpx;
}
.flex{
  display: inline-flex;
  align-items: center;
  font-size: 12px;
}
.renew{
  color: #FEA001;
  margin-left: 10rpx;
}