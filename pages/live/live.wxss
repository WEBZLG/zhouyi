/* pages/live/live.wxss */
.container {
  font-size: 14px;
}

.room-item{
  background-color: #ffffff;
  margin-bottom: 30rpx;
  position: relative;
}
.content{
  padding:20rpx 30rpx;
}
.desc{
  font-weight: bold;
}
.start-time{
  font-size: 12px;
  color: #999999;
}
.status{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 12px;
  padding: 4rpx 20rpx;
  background-color: #999999;
  color: #ffffff;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.van-cell__title{
  font-weight: bold;
}
.van-cell__label{
  font-weight: initial;
}