<!--pages/magicDetail/magicDetail.wxml-->
<view>
<van-skeleton title animate row="3" loading="{{ loading }}">
	<van-cell-group>
		<view class="flex">
			<van-cell title="排法" value="茅道" />
			<van-cell title="旬首" value="{{specialData.ob.list_first}}{{specialData.ob.ob_first}}" />
		</view>
		<van-cell title="节气">
			<view class="van-cell-value">{{specialData.prev_solar}}</view>
			<view class="van-cell-value">{{specialData.next_solar}}</view>
		</van-cell>
		<van-cell title="时间">
			<view class="van-cell-value">公历 {{specialData.gregorian_calendar}}</view>
			<view class="van-cell-value">农历 {{specialData.lunar}}</view>
		</van-cell>
		<van-cell title="">
			<view class="van-cell-value">{{specialData.era.year+' '}}{{specialData.era.month+' '}}{{specialData.era.day+' '}}{{specialData.era.hour}}</view>
			<view class="van-cell-value">局：{{specialData.layout_name+'；'}}值符：{{specialData.zhifu_star+'；'}}值使：{{specialData.zhishi_door}}</view>
		</van-cell>
	</van-cell-group>
	</van-skeleton>
	<van-skeleton  animate row="7" loading="{{ loading }}">
	<view class="column-box" wx:if="{{sudoku}}">
		<van-grid column-num="3" border="{{ true }}" square="{{true}}" custom-class="border-color">
			<van-grid-item use-slot wx:for="{{sudoku}}" custom-class="border-color" wx:key="index" bind:click="showPopup">
				<view class="top">{{item.god}}</view>
				<view class="middle">{{item._ts_meter}}</view>
				<view class="bottom">
					<text>{{item.ts_meter}}</text>
					<text>{{item.star}}</text>
					<text>{{item.door}}</text>
				</view>
			</van-grid-item>
		</van-grid>
	</view>
	<van-popup show="{{ show }}" bind:close="onClose">内容</van-popup>
	</van-skeleton>
</view>