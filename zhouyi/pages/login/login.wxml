<!--pages/login.wxml-->
<view>
	<van-cell-group border="{{ false }}">
		<van-field value="{{ phone }}" bindinput='getPhoneValue' left-icon="contact" border="{{ false }}" placeholder="请输入手机号"/>
		<van-field value="{{ password }}" bindinput='getPwdValue' left-icon="closed-eye" border="{{ false }}" type="password" placeholder="请输入密码"  use-button-slot>
			<van-button slot="button" size="small" catchtap="onResetPwd">忘记密码</van-button>
		</van-field>
	</van-cell-group>
	<view class="btn-box">
		<van-button plain type="primary" catchtap="onRegist">注册</van-button>
		<van-button type="primary" catchtap="onSingIn">登录</van-button>
	</view>
</view>